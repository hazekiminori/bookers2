<div class="container px-5 px-xm-0">
 <div class="row">
  <div class="col-md-3">
   <h4>User Info</h4>
    <table class="table">
     <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
     </tbody>
    </table>

<%= link_to 'user_edit', edit_user_path(@user) %>

<h2 class="mt-3">New Book</h4>

<%= form_with model: @book, local:true, url: books_path, method: :post do |f| %>

<p>title</p>
 <%= f.text_field :title %>
 
<p>opinion</p>
 <%= f.text_area :body %>
 
<div><%= f.submit 'Create Book' %></div>
 
<% end %>
</div>

<h2>Users</h2>
<% @users.each do |user| %>
<%= link_to "Show", user_path(@user.id) %>
<% end %>