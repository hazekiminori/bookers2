<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
        <%= image_tag @user.profile_image %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
    
  <div class="row">
    <% if @user == current_user %> 
    <%= link_to 'user_edit', edit_user_path(@user), class:"btn btn-outline-secondary btn-block" %>
    <% end %>
  </div>
    
  <h2 class="mt-3">New Book</h2>

    <%= form_with model: @book, local:true, url: books_path, method: :post do |f| %>

  <p>title</p>
    <%= f.text_field :title %>
 
  <p>opinion</p>
    <%= f.text_area :body %>
 
  <div><%= f.submit 'Create Book' %></div>
    <% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <tr>
          <% @users.each do |user| %>
          <% end %>
          <td><%= image_tag user.user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
       </tr>
     </tbody>
   </table>
</div>
  </div>
    </div>