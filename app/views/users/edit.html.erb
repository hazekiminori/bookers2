<h1>User info</h1>

  <%= form_with model: @user,url user_path(@user.id), method: :patch do |f| %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>

  <h4>Image</h4>
  <% if list.image.attached? %>
   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

  <label for="inputImage">Introduction</label>
  <%= f.text_area :body, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %>

  <%= f.submit "Update User" %>
<% end %>