<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'userinfo', user: @user %>

  <div class="row">
    <% if @user == current_user %>
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    <% else %>
      <%= redirect_to user_path(current_user.id) %>
    <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
      <h2>
　      <% if @book_new.errors.any? %>
        <%= @book_new.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <%= @book_new.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </h2>

      <%= form_with model: @book_new, local:true, url: "/books", method: :post do |f| %>

       <p>Title</p>
          <%= f.text_field :title %>
       <p>Opinion</p>
          <%= f.text_area :body %>
       <div><%= f.submit 'Create Book' %></div>
      <% end %>
</div>

  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
 　    <table class="table table-hover table-inverse">
　    　<thead>
       　　<tr>
          　<th></th>
          　<th>Title</th>
          　<th>Option</th>
          　<th colspan="3"></th>
       　　</tr>
 　    　</thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
   　</table>
  </div>
</div>