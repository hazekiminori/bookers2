<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "d-flex flex-colum vh-100">
    <header class = "shadow-sm">
      <nav class = "navbar navbar-expand-lg navbar-light"></nav>
       <div class = "container"></div>
        <button class = "navbar_toggler" type="button" data-toggle="collapse" 
        data-toggle="#navbarNavDropdown" aria-controls="novbarNovDropdown"
        aria-expended="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <a class = "navbar-nav ml-auto"></a>
      <% if user_signed_in? %>
      <li class ="nav-item">
        <%= link_to 'Home', root_path %>
      </li>
      <li class ="nav-item">
        <%= link_to 'Books', new_book_path %>
      </li>
      <li class ="nav-item">
        <%= link_to "Users", users_path %>
      </li>
      <% else %>
      <li class ="nav-item">
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li class ="nav-item">
        <%= link_to "Log out", new_user_session_path %>
      </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
