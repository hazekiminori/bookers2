<h4>User Info</h4>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag .get_profile_image(100,100) %>
</div>

<h4>New Book</h4>
<%= form_with model: @book, url: books_path, method: :post do |f| %>

<p>title</p>
 <%= f.text_field :title %>
 
<p>opinion</p>
 <%= f.text_area :body %>
 
<div><%= f.submit 'Create Book' %></div>
 
<% end %>

<h4>Book detail</h4>
<table>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <%= image_tag @user.get_profile_image(100,100) %>
      <td><%= @user.name %></td>
      <td><%= book.title %></td>
      <td><%= book.body %><td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>