<%= flash[:notice] %>
<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h2>User Info</h2>
      <%=image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>

  <div class="row">
    <% if @book.user == current_user %>
    <%= link_to 'user_edit', edit_user_path(@book.user.id), class:"btn btn-outline-secondary btn-block" %>
    <% end %>
  </div>
   <%= render 'newbook', book: @book %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.user.name, user_path(book.id) %></td>
      <td><%= link_to book.title %></td>
      <td><%= book.body %><td>
      <td><%= link_to "Edit", edit_book_path(book.id), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-sm btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>