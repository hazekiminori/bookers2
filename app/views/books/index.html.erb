<div class="container px-5 px-xm-0">
 <div class="row">
  <div class="col-md-3">
   <h4>User Info</h4>
    <table class="table">
     <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
     </tbody>
    </table>

<%= link_to 'user_edit', edit_user_path(@user) %>

<h2 class="mt-3">New Book</h4>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this obj from being saved:
 <ul>
  <%= @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book, local:true, url: books_path, method: :post do |f| %>

<p>title</p>
 <%= f.text_field :title %>
 
<p>opinion</p>
 <%= f.text_area :body %>
 
<div><%= f.submit 'Create Book' %></div>
 
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h4>Books</h4>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= @user.name %></td>
      <td><%= book.title %></td>
      <td><%= book.body %><td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
</div>
</div>