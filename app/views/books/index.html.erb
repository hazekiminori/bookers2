<h4>User Info</h4>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to 'user_edit', edit_user_path(@user) %>

<h4>New Book</h4>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this obj from being saved:
 <ul>
  <%= @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book, local:true, url: books_path, method: :post do |f| %>

<p>title</p>
 <%= f.text_field :title %>
 
<p>opinion</p>
 <%= f.text_area :body %>
 
<div><%= f.submit 'Create Book' %></div>
 
<% end %>

<h4>Books</h4>
<table>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= @user.name %></td>
      <td><%= book.title %></td>
      <td><%= book.body %><td>
    </tr>
    <% end %>
  </tbody>
</table>

